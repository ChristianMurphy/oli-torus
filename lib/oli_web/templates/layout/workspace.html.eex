<a id='skip-nav' class='screenreader-text' href='#main-content'>
  Skip Navigation
</a>

<%= render_layout "authoring.html", assigns do %>

<div class="workspace">
  <div class="workspace-left">
    <%= render OliWeb.LayoutView, "_#{if @conn.params["project_id"] do "project" else "workspace" end}_sidebar.html", assigns %>
  </div>

  <div class="workspace-right">
    <%= render OliWeb.LayoutView, "_#{if @conn.params["project_id"] do "project" else
      if @title == "Projects" do "workspace" else "account" end end}_header.html", assigns %>

    <main role="main" id="main-content">
      <%= @inner_content %>
    </main>

    <%= render OliWeb.LayoutView, "_footer.html", assigns %>
  </div>
</div>

<% end  %>
